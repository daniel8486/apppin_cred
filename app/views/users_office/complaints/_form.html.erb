    <title>Painel Administrativo</title>
</head>

<body> 

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><strong> <h3> <%#= message %></h3> </strong> </div>
                    <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-12"> 
                                <%= form_with(model: users_office_complaint, local: true) do |form| %>
