                                        </div>

                                        <div class="form-group">
                                          <%= form.label :dtnascimento  %>
                                          <%= form.text_field :dtnascimento , class:"form-control",placeholder:"Data de Nascimento", id: form.object.object_id%>
                                        </div>

                                        <div class="form-group">
                                          <%= form.label :phone %>
                                          <%= form.text_field :phone, class:"form-control",placeholder:"Telefone", id: form.object.object_id%>
                                        </div>

                                        <div class="form-group">
                                          <%= form.label :city %>
                                          <%= form.text_field :city, class:"form-control",placeholder:"Cidade", id: form.object.object_id%>
                                        </div>

                                        <div class="form-group">
                                          <%= form.label :state %>
                                          <%= form.text_field :state, class:"form-control",placeholder:"Estado", id: form.object.object_id%>
                                        </div>

                                        <div class="form-group">
                                          <%= form.label :typecontact  %>
                                          <%= form.text_field :typecontact , class:"form-control",placeholder:"Tipo de Contato", id: form.object.object_id%>
                                        </div>

