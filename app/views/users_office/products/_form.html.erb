<!doctype html>
<!-- https://bootsnipp.com/snippets/GaZG0 -->
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Fonts -->
    <link rel="dns-prefetch" href="https://fonts.gstatic.com">
  


    <link rel="icon" href="Favicon.png">


    <title>Painel Administrativo</title>
</head>

<body> 

<main class="login-form">
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header"><strong> <h3> <%= message %></h3> </strong> </div>
                    <div class="card-body">
                            <div class="form-group row">
                                <div class="col-md-12"> 
                                <%= form_with(model: users_office_product, local: true) do |form| %>
                                  <% if users_office_product.errors.any? %>
                                    <div id="error_explanation">
                                      <h2><%= pluralize(users_office_product.errors.count, "error") %> prohibited this users_office_product from being saved:</h2>

                                      <ul>
                                        <% users_office_product.errors.full_messages.each do |message| %>
                                          <li><%= message %></li>
                                        <% end %>
                                      </ul>
                                    </div>
                                  <% end %>

                                        <div class="form-group">
                                         <%= form.label :title %>
                                         <%= form.text_field :title, class:"form-control",placeholder:"Insira um Titulo a Imagem" %>
                                         </div>
                                    
                                        <div class="form-group">
                                          <%= form.label :subtitle %>
                                          <%= form.rich_text_area :subtitle, class:"form-control",placeholder:"Subtitulo",id: form.object.object_id %>
                                        </div>
                                     
                                         <%= form.submit "Salvar" , class: 'btn btn-primary'%>
                                         <% end %>
                                    
                                </div>
                            </div>
      
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
    </div>

</main>
</body>
</html>